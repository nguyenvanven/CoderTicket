<div class="container">
<%= simple_form_for(@user) do |f| %>
	<% unless @user.errors.empty? %>
		<div class="alert alert-danger" >
		Please correct following errors:
		<% @user.errors.full_messages.each do |message| %>
			<li><%= message %> </li>
		<% end %>
		</div>
	<% end %>

	<div class="form-horizontal">

		<div class="form-group row">
			<label class="control-label col-sm-2">Full Name:</label>
			<%= f.text_field :full_name, class:"col-sm-4", placeholder: "Enter your full name..."%>
		</div>
		<div class="form-group row">
			<label class="control-label col-sm-2">Email:</label>
			<%= f.text_field :email, class:"col-sm-4", placeholder:"Enter you email address..." %>
		</div>
		<div class="form-group row">
			<label class="control-label col-sm-2">Password:</label>
			<%= f.password_field :password, class:"col-sm-4", placeholder:"Enter your password here..." %>
		</div>
		<%= f.submit "Create account", class:'btn btn-primary' %>
	</div>
	<%end%>
</div>
