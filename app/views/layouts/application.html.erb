<!DOCTYPE html>
<html>
<head>
  <title>Event Ticket</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar  navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Events</a>
    <ul class="nav navbar-nav">
      <li class="nav-item">
        <%= link_to "Upcoming events", upcoming_path(:upcoming=>true), class:"nav-link" %>
      </li>
      <% if current_user.present? %>
      <li class="nav-item">
        <%= link_to "My Events", my_events_path, class:"nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to current_user.full_name, class:"nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign out",logout_path, class:"nav-link" %>
      </li>
      <%else %>
        <li class="nav-item">
          <%= link_to "Log In", login_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Up",new_user_path, class:"nav-link" %>
        </li>
      <% end %>
    </ul>
  </nav>
<%= flash_messages %>
<%= yield %>

</body>
</html>
