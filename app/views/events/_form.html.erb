<div class="container">
<%= simple_form_for(@event) do |f| %>
	<% unless @event.errors.empty? %>
		<div class="alert alert-danger" >
		Please correct following errors:
		<% @event.errors.full_messages.each do |message| %>
			<li><%= message %> </li>
		<% end %>
		</div>
	<% end %>

  <div class="form-horizontal">
    <div class="form-group row">
      <label class="control-label col-sm-2">Event name:</label>
      <%= f.text_field :name, class:"col-sm-4", placeholder:"Enter event name here"%>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2">Start at:</label>
      <%= f.datetime_select :starts_at, class:"col-sm-4"%>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2">End at:</label>
      <%= f.datetime_select :ends_at, class:"col-sm-4"%>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2">Password:</label>
      <%= f.select :venue_id, options_from_collection_for_select(@venues,"id","name"), :class => "chzn-select" %>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2">Image Url:</label>
      <%= f.text_field :hero_image_url, class:"col-sm-4", placeholder:"Paste Event image here"%>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2">Description (html form):</label>
      <%= f.text_area :extended_html_description, class:"col-sm-4", :rows=>10, placeholder:"Description of event in html" %>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2">Category:</label>
      <%= f.select :category_id, options_from_collection_for_select(@categories,"id","name"), :class => "chzn-select" %>
    </div>
    <div class="form-group row">
      <div class="col-sm-2">
      </div>
			<% if @event.id.present? %>
			<%= f.submit "Save", class:'btn btn-primary' %>
			<% else %>
      <%= f.submit "Create", class:'btn btn-primary' %>
			<%end %>
    </div>
  </div>

  <%end%>
</div>
