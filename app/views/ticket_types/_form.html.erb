<div class="container">
<%= simple_form_for(@ticket_type) do |f| %>
	<% unless @ticket_type.errors.empty? %>
		<div class="alert alert-danger" >
		Please correct following errors:
		<% @ticket_type.errors.full_messages.each do |message| %>
			<li><%= message %> </li>
		<% end %>
		</div>
	<% end %>

	<div class="form-horizontal">

		<div class="form-group row">
			<label class="control-label col-sm-2">Name:</label>
			<%= f.text_field :name, class:"col-sm-4", placeholder: "Enter ticket type name..."%>
		</div>
		<%= f.hidden_field :event_id %>
		<div class="form-group row">
			<label class="control-label col-sm-2">Price:</label>
			<%= f.number_field :price, class:"col-sm-4" %>
		</div>
		<div class="form-group row">
			<label class="control-label col-sm-2">Max Quantity:</label>
			<%= f.number_field :max_quantity, class:"col-sm-4" %>
		</div>
		<div class="form-group row">
      <div class="col-sm-2">
      </div>
      <%= f.submit "Create", class:'btn btn-primary' %>
    </div>
	</div>
	<%end%>
</div>
